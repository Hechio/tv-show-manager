<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small"
    app:cardElevation="@dimen/small"
    app:cardCornerRadius="@dimen/small"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Black Mirror"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/text_large"
            android:layout_marginHorizontal="@dimen/small"
            android:layout_marginTop="@dimen/small"
            style="@style/TextAppearance.AppCompat.Medium"
            android:fontFamily="@font/montserrat_regular"/>

        <TextView
            android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/release_date"
            android:textSize="@dimen/text_medium"
            android:layout_marginTop="@dimen/small"
            android:layout_marginHorizontal="@dimen/small"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:fontFamily="@font/montserrat_regular"/>
        <TextView
            android:id="@+id/tv_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="4 December 2011"
            android:textSize="@dimen/text_medium"
            android:layout_marginHorizontal="@dimen/small"
            android:layout_marginTop="@dimen/small"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/release_date"
            app:layout_constraintHorizontal_bias="0"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
            android:fontFamily="@font/montserrat_regular"/>


        <TextView
            android:id="@+id/seasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seasons"
            android:textSize="@dimen/text_medium"
            android:layout_marginVertical="@dimen/small"
            android:layout_marginHorizontal="@dimen/small"
            app:layout_constraintTop_toBottomOf="@+id/tv_release_date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:fontFamily="@font/montserrat_regular"/>
        <TextView
            android:id="@+id/tv_seasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="4"
            android:textSize="@dimen/text_medium"
            android:layout_marginVertical="@dimen/small"
            android:layout_marginHorizontal="@dimen/small"
            app:layout_constraintTop_toBottomOf="@+id/tv_release_date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/seasons"
            app:layout_constraintHorizontal_bias="0"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
            android:fontFamily="@font/montserrat_regular"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>